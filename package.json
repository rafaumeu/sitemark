{
    "name": "biolinks",
    "description": "Biolinks - Link in Bio Solution",
    "$schema": "https://www.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "prepare": "husky install",
        "format:blade": "blade-formatter --write 'resources/views/**/*.blade.php' --ignore-path .bladeignore"
    },
    "lint-staged": {
        "**/*.php": [
            "vendor/bin/pint",
            "vendor/bin/phpstan analyse"
        ],
        "**/*.blade.php": [
            "blade-formatter --write --ignore-path .bladeignore"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^20.4.1",
        "@commitlint/config-conventional": "^20.4.1",
        "@tailwindcss/vite": "^4.2.0",
        "axios": "^1.11.0",
        "blade-formatter": "^1.44.2",
        "concurrently": "^9.0.1",
        "husky": "^9.1.7",
        "laravel-vite-plugin": "^2.0.0",
        "lint-staged": "^16.2.7",
        "tailwindcss": "^4.1.18",
        "vite": "^7.0.7"
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
    "dependencies": {
        "daisyui": "^5.5.17"
    }
}